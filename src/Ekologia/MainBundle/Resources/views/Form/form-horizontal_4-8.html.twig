{% block form_row %}
{% spaceless %}
    <div class="form-group">
        {{ form_label(form, null, {'label_attr': {'class': 'control-label col-sm-4'} }) }}
        <div class="col-sm-8">
            {{ form_widget(form, {'attr': {'class': 'form-control'} }) }}
            <span class="help-block">{{ form_errors(form) }}</span>
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}